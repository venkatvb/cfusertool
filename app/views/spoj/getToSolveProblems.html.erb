<div ng-controller="SpojController">
	<table class="table table-striped table-hover ">
		<thead>
			<tr>
				<th>#</th>
				<th><a class="btn btn-raised btn-default" ng-click="order('problem')">Problem</a></th>
				<th><a class="btn btn-raised btn-default" ng-click="order('solved')">Solved</a></th>
				<th><a class="btn btn-raised btn-default" ng-click="order('todo')">Todo</a></th>
			</tr>
		</thead>
		<tbody>
			<tr dir-paginate="instance in problems | orderBy:predicate:reverse | itemsPerPage: 10" 
				ng-class="instance.attempted ? 'success' : ''">
				<td>{{$index+1}}</td>
				<td><a href="http://www.spoj.com/problems/{{instance.problem}}/">{{instance.problem}}</a></td>
				<td>{{instance.solved}}</td>
				<td>{{instance.todo}}</td>
			</tr>
		</tbody>
  	</table>
	<dir-pagination-controls 
		boundary-links="true" 
		on-page-change="pageChangeHandler(newPageNumber)" 
		template-url="/pagination.tpl.html">
	</dir-pagination-controls>
</div>